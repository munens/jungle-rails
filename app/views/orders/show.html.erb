<section class="cart-show">

  <header class="page-header">
    <h1>Orders of: <%= "#{current_user.email}, #{current_user.first_name}"%></h1>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>
        <% @order_items.each do |order_item| %>
          <%=@order_total += order_item.product.price %>
          <%= render 'item', item: order_item.product %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= "$#{@order_total}" %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

</section>