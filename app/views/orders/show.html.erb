<section class="cart-show">

  <header class="page-header">
    <h1>Orders of: <%= "#{current_user.email}, #{current_user.first_name}"%></h1>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>   
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>
        <% @order_items.each do |order_item| %>
          <% @order_total += (order_item.total_price_cents * order_item.quantity) %>
          <%= render "item", order_item: order_item %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            <%= "$#{@order_total/100.to_f}" %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

</section>